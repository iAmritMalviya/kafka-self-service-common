{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2022",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}